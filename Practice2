//Function to determine if a function is even/odd
let value1: number= 5;

if (value1%2==0){
    console.log("Value 1 is an even number")
}
else{
console.log("Value 1 is an odd number")
}



//Function to convert pounds to Kilograms
function convertToKgs(pound:number)
{
    return pound*0.45359337
}

console.log('10 pounds is equal to', convertToKgs(10))

//Function to covert Fahrenheit to Celsius
function convertToCelsius(Celsius:number)
{
    return ((Celsius - 32) * 5/9)
}

console.log(convertToCelsius(100), "celsius");